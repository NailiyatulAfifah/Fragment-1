<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.sch.smktelkom_mlg.fragment.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="Pilihan Fragment"
        android:textAlignment="center"
        android:textColor="#FF22"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/multiple"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="37dp"
        android:onClick="multiple"
        android:text="Multiple Fragment" />

    <Button
        android:id="@+id/FragmentPager"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/multiple"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="36dp"
        android:onClick="multiple"
        android:text="Fragement View Paper" />

    <Button
        android:id="@+id/FragmentDrawer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/FragmentPager"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="37dp"
        android:onClick="multiple"
        android:text="Fragment Drawer" />
</RelativeLayout>

